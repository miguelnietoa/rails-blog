<%= render 'shared/navbar' %>

<div class="my-20 mx-auto w-4/5 lg:w-3/5">
  <h1 class="text-3xl font-black"><%= @article.title %></h1>
  <i class="fas fa-user-edit text-lg"></i>
  <span class="text-lg">Author name</span>
  
  <br>
  <i class="far fa-calendar-plus text-lg"></i>
  <span class="text-lg">Created on <%= @article.created_at.strftime('%B %d, %Y') %></span>

  <br>
  <i class="fas fa-edit text-lg"></i>
  <span class="text-lg">Last updated on <%= @article.updated_at.strftime('%B %d, %Y') %></span>
  
  
  <p class="m-10 text-xl"><%= @article.body %></p>

  <ul class="flex justify-end">
    <li>
      <%= link_to "Edit", edit_article_path(@article),
          class: "mr-10 block w-24 text-center bg-gray-500 hover:bg-gray-400 text-white font-bold py-2 px-4 border-b-4 border-gray-700 hover:border-gray-500 rounded" %>
    </li>
    <li>
      <%= link_to "Destroy", article_path(@article),
          class: "block w-24 text-center bg-gray-500 hover:bg-gray-400 text-white font-bold py-2 px-4 border-b-4 border-gray-700 hover:border-gray-500 rounded",
          method: :delete,
          data: { confirm: "Are you sure?" } %>
    </li>
  </ul>

  

  <div class="my-8">
    <h2 class="text-xl">Comments</h2>
    <hr/>
    <%= render @article.comments %>
  </div>

  <div class="">
    <h2 class="text-xl">Add a comment:</h2>
    <hr/>
    <%= render 'comments/form' %>
  </div>
</div>
