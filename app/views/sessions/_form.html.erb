<%= form_with(scope: :session, url: login_path) do |f| %>

<div class="form-group">
  <%= f.label :username %><br/>
  <%= f.text_field :username %>
</div>

<div class="form-group">
  <%= f.label :password %><br/>
  <%= f.password_field :password %>
</div>

<div class="form-group">
  <%= f.submit "Log in" %>
</div>

<% end %>
