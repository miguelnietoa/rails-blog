<%= form_with(model: @user, local: true) do |f| %>

  <div class="">
    <%= f.label :username %><br/>
    <%= f.text_field :username %>
  </div>

  <div class="">
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
  </div>

  <div class="">
    <%= f.label :info %><br/>
    <%= f.text_area :info %>
  </div>

  <div class="">
    <%= f.submit %>
  </div>

<% end %>
